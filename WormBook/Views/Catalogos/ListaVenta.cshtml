@model IEnumerable<WormBook.Models.Ventum>

@{
    ViewData["Title"] = "Productos Vendidos";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', sans-serif;
    }

    .card {
        border: none;
        border-radius: 20px;
        background: #fff;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

    .card-body {
        background: #f1f4ff;
        border-radius: 20px;
    }

    h2 {
        font-weight: 700;
        color: #6c63ff;
    }

    .card-title {
        color: #4a4e69;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .card p {
        margin-bottom: 0.6rem;
        color: #495057;
    }

    .icon-title {
        color: #6c63ff;
        font-size: 1.5rem;
        margin-right: 0.5rem;
    }
</style>

<div class="container py-5">
    <h2 class="text-center mb-5"><i class="bi bi-bar-chart-fill icon-title"></i> Productos Vendidos</h2>

    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-shop-window"></i> @item.CodigosucursalNavigation?.Nombresucursal</h5>

                        <p><i class="bi bi-hash"></i> <strong>Venta Nº:</strong> @item.Numventa</p>
                        <p><i class="bi bi-cash-stack"></i> <strong>Precio Total:</strong> $@item.Total</p>
                        <p><i class="bi bi-calendar-event"></i> <strong>Fecha:</strong> @item.Fechacompra?.ToString("dd/MM/yyyy")</p>
                        <p><i class="bi bi-box-seam"></i> <strong>Productos:</strong> @item.Productovendidos.Count()</p>
                        <p><i class="bi bi-geo"></i> <strong>Sucursal ID:</strong> @item.Codigosucursal</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
