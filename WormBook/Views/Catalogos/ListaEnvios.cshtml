@model List<WormBook.ViewModels.EnvioConClienteVM>
@{
    ViewData["Title"] = "Lista de Envíos";
    Layout = "_Layout"; // Cambia esto si usas otro layout
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - WormBook</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #fdf6f0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        h2 {
            color: #6c5ce7;
        }

        .card {
            background: #fff0f6;
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            }

        .card-title {
            color: #d63384;
            font-weight: bold;
        }

        .card-text strong {
            color: #6c757d;
        }

        .alert-warning {
            background-color: #fff3cd;
            color: #856404;
            border: 1px solid #ffeeba;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <h2 class="mb-4 text-center">📦 Envíos realizados</h2>

        @if (Model.Any())
        {
            <div class="row justify-content-center">
                @foreach (var envio in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Guía: @envio.Guiaenvio</h5>
                                <p class="card-text">
                                    <strong>Origen:</strong> @envio.Sucursalorigen<br />
                                    <strong>Destino:</strong> @envio.Destino
                                </p>
                                <p class="card-text">
                                    <strong>Cliente:</strong> @envio.Nombre @envio.Apellido<br />
                                    <strong>Teléfono:</strong> @envio.Telefono
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center">
                No hay envíos registrados por el momento.
            </div>
        }
    </div>
</body>
</html>
