@{
    ViewData["Title"] = "Home Page";
    bool isLoggedIn = (bool)(ViewData["IsLoggedIn"] ?? false);
}

<div class="text-center">
    @if (isLoggedIn)
    {
     
    }
    else
    {
        <div id="carouselExampleDark" class="carousel carousel-dark slide">
            <!-- ...tu código del carousel aquí... -->
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">

                <div class="carousel-item active" data-bs-interval="1000" style="cursor:pointer;"
                     onclick="window.location.href='@Url.Action("ComprasLibro", "Compras")'">
                    <img src="img/ComprarLibro.gif" class="d-block w-100" alt="Comprar Libro" />
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Comprar un libro</h5>
                        <p>Explora nuestra variedad y compra tu favorito con nosotros.</p>
                    </div>
                </div>
                <div class="carousel-item" style="cursor:pointer;" data-bs-interval="1000"
                     onclick="window.location.href='@Url.Action("ComprasJuegosMesa", "Compras")'">
                    <img src="img/Juegosdemesa.png" class="d-block w-100" alt="Juegos de mesa" />
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Para los más peques</h5>
                        <p>Explora nuestra sección de juegos de mesa.</p>
                    </div>
                </div>
                <!-- ✅ Slide 3: Envíos -->
                    <div class="carousel-item" style="cursor:pointer;" data-bs-interval="1000"
                         onclick="window.location.href='@Url.Action("Envios", "Envios")'">
                        <img src="img/envios.gif" class="d-block w-100" alt="Rastrear envío" />
                        <div class="carousel-caption d-none d-md-block">
                            <h5>¿Esperas un envío?</h5>
                            <p>Consulta el estado y detalles de tu envío aquí.</p>
                        </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    }
</div>
