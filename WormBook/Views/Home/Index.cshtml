@{
    ViewData["Title"] = "Home Page";
    bool isLoggedIn = (bool)(ViewData["IsLoggedIn"] ?? false);
}

<div class="text-center">
    @if (isLoggedIn)
    {
        <div class="container py-5">
            <h2 class="mb-4 text-primary">📊 Panel de Administración</h2>
            <div class="row justify-content-center">

                <!-- Libros -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow" style="cursor:pointer;" onclick="window.location.href='@Url.Action("Libros", "Catalogos")'">
                        <div class="card-body">
                            <h5 class="card-title text-primary"><i class="bi bi-book"></i> Libros</h5>
                            <p class="card-text">Ver, editar y administrar los libros del catálogo.</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 text-end">
                            <a href="@Url.Action("Libros", "Catalogos")" class="btn btn-outline-primary btn-sm">Ir</a>
                        </div>
                    </div>
                </div>

                <!-- Juegos de Mesa -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow" style="cursor:pointer;" onclick="window.location.href='@Url.Action("JuegoMesa", "JuegoMesa")'">
                        <div class="card-body">
                            <h5 class="card-title text-success"><i class="bi bi-controller"></i> Juegos de Mesa</h5>
                            <p class="card-text">Gestiona los juegos disponibles para la venta.</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 text-end">
                            <a href="@Url.Action("JuegoMesa", "JuegoMesa")" class="btn btn-outline-success btn-sm">Ir</a>
                        </div>
                    </div>
                </div>

                <!-- Envíos -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow" style="cursor:pointer;" onclick="window.location.href='@Url.Action("ListaEnvios", "Catalogos")'">
                        <div class="card-body">
                            <h5 class="card-title text-warning"><i class="bi bi-truck"></i> Envíos</h5>
                            <p class="card-text">Consulta y gestiona los envíos registrados.</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 text-end">
                            <a href="@Url.Action("ListaEnvios", "Catalogos")" class="btn btn-outline-warning btn-sm">Ir</a>
                        </div>
                    </div>
                </div>

                <!-- Productos Enviados -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow" style="cursor:pointer;" onclick="window.location.href='@Url.Action("ListaProductosEnviados", "Catalogos")'">
                        <div class="card-body">
                            <h5 class="card-title text-info"><i class="bi bi-box-seam"></i> Productos Enviados</h5>
                            <p class="card-text">Ver historial de productos enviados a sucursales.</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 text-end">
                            <a href="@Url.Action("ListaProductosEnviados", "Catalogos")" class="btn btn-outline-info btn-sm">Ir</a>
                        </div>
                    </div>
                </div>

                <!-- Productos Vendidos -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow" style="cursor:pointer;" onclick="window.location.href='@Url.Action("ListaProductosVendidos", "Catalogos")'">
                        <div class="card-body">
                            <h5 class="card-title text-danger"><i class="bi bi-cart-check"></i> Productos Vendidos</h5>
                            <p class="card-text">Consulta de productos vendidos por sucursal.</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 text-end">
                            <a href="@Url.Action("ListaProductosVendidos", "Catalogos")" class="btn btn-outline-danger btn-sm">Ir</a>
                        </div>
                    </div>
                </div>

                <!-- Ventas -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow" style="cursor:pointer;" onclick="window.location.href='@Url.Action("ListaVenta", "Catalogos")'">
                        <div class="card-body">
                            <h5 class="card-title text-secondary"><i class="bi bi-receipt"></i> Ventas</h5>
                            <p class="card-text">Historial de ventas agrupadas por ticket o folio.</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 text-end">
                            <a href="@Url.Action("ListaVenta", "Catalogos")" class="btn btn-outline-secondary btn-sm">Ir</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    }
    else
    {
        <div id="carouselExampleDark" class="carousel carousel-dark slide">
            <!-- ...tu código del carousel aquí... -->
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">

                <div class="carousel-item active" data-bs-interval="1000" style="cursor:pointer;"
                     onclick="window.location.href='@Url.Action("ComprasLibro", "Compras")'">
                    <img src="img/ComprarLibro.gif" class="d-block w-100" alt="Comprar Libro" />
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Comprar un libro</h5>
                        <p>Explora nuestra variedad y compra tu favorito con nosotros.</p>
                    </div>
                </div>
                <div class="carousel-item" style="cursor:pointer;" data-bs-interval="1000"
                     onclick="window.location.href='@Url.Action("ComprasJuegosMesa", "Compras")'">
                    <img src="img/Juegosdemesa.png" class="d-block w-100" alt="Juegos de mesa" />
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Para los más peques</h5>
                        <p>Explora nuestra sección de juegos de mesa.</p>
                    </div>
                </div>
                <!-- ✅ Slide 3: Envíos -->
                    <div class="carousel-item" style="cursor:pointer;" data-bs-interval="1000"
                         onclick="window.location.href='@Url.Action("Envios", "Envios")'">
                        <img src="img/envios.gif" class="d-block w-100" alt="Rastrear envío" />
                        <div class="carousel-caption d-none d-md-block">
                            <h5>¿Esperas un envío?</h5>
                            <p>Consulta el estado y detalles de tu envío aquí.</p>
                        </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    }
</div>
